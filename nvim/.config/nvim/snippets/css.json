{
	"Media Query": {
		"prefix": "s.media query",
		"body": [
			"@media only screen and (${1:max}-width: ${2:767}px) {\n\t$3\n}$4"
		],
    "description": "add media query"
	},
	"section 1 line comment": {
		"prefix": "s.comment 1 line",
		"body": [
			"/*$1*/\n$2"
		],
    "description": "add a single line comment"
	},
	"section block comment": {
		"prefix": "s.comment block section",
		"body": [
			"/*$1*/\n$2\n/*#$1*/\n$3"
		],
    "description": "add a comment block section"
	},
	"background shorthand": {
		"prefix": "s.background shorthand",
		"body": [
			"background: url(\"${1:[url]}\") ${2:[background-position]} / ${3:[background-size]} ${4:[background-repeat]} ${5:[background-attachment]} ${6:[background-origin]} ${7:[background-clip]} ${8:[background-color]};"
		],
    "description": "add backgound shorthand rule"
	}
}
